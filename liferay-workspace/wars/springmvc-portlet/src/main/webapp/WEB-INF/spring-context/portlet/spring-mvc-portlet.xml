<?xml version="1.0"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
>
	<!-- advice -->

	<bean id="transactionAdvice" class="com.liferay.portal.kernel.bean.PortalBeanLocatorUtil" factory-method="locate">
		<constructor-arg type="java.lang.String" value="transactionAdvice" />
	</bean>

	<bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
		<property name="beanNames">
			<list>
				<value>com.liferay.blade.samples.springmvc.SpringMVCPortletViewController</value>
			</list>
		</property>
		<property name="interceptorNames">
			<list>
				<value>transactionAdvice</value>
			</list>
		</property>
	</bean>

	<!-- component scan -->

	<context:component-scan base-package="com.liferay.blade.samples.springmvc.**" />
</beans>